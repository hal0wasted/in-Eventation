<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="20dp"
    >
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/festImage"
        android:scaleType="fitXY"
        android:background="@color/transparent"
        android:adjustViewBounds="true"
        android:src="@mipmap/add_btn"
        />

    <TextView
        android:id="@+id/festTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fest Title Enters Here"
        android:textSize="16sp"
        android:padding="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/festDescription"
        android:layout_width="match_parent"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="wrap_content"
        android:text="Fest Description Enters Here" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/festDp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="clip_horizontal"
            android:adjustViewBounds="true"
            android:background="@drawable/img"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/festUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="15dp"
            android:paddingTop="6dp"
            android:paddingLeft="6dp"
            android:textAlignment="viewStart"
            android:paddingRight="15dp"
            android:text="Username"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/festDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:textAlignment="textEnd"
            android:paddingRight="15dp"
            android:layout_weight="1"
            android:text="Date and Time"
            android:textSize="12sp"
            android:textStyle="bold" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal">

        <ImageButton
            android:id="@+id/festLikeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:padding="5dp"
            android:scaleType="centerCrop"

            android:src="@mipmap/ic_thumb_up_grey_24dp"

            />

        <ImageButton
            android:id="@+id/imageDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_delete_black_24dp"
            android:background="@color/transparent"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
</android.support.v7.widget.CardView>