<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/festParticipantImage"
            android:scaleType="fitXY"
            android:background="@color/transparent"
            android:adjustViewBounds="true"
            android:src="@mipmap/add_btn"
            />

        <TextView
            android:id="@+id/festParticipantTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fest Title Enters Here"
            android:textSize="16sp"
            android:padding="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/festParticipantDescription"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Fest Description Enters Here" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/festParticipantDp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="clip_horizontal"
                android:adjustViewBounds="true"
                android:background="@drawable/img"
                android:src="@mipmap/noimage"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/festParticipantUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:textAlignment="viewStart"
                android:paddingRight="15dp"
                android:text="Username"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/festParticipantDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:textAlignment="textEnd"
                android:paddingRight="15dp"
                android:layout_weight="1"
                android:text="Date and Time"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/festParticipantLikeButton"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_thumb_up_grey_24dp"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:padding="5dp"

            android:background="@color/transparent"

            />

    </LinearLayout>
</android.support.v7.widget.CardView>